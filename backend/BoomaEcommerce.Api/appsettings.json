{
  "Jwt": {
    "Secret": "aaaaaaaaaaaaaaaaaaaaaaaaaaaa",
    "TokenLifeTime": "00:00:40",
    "RefreshTokenExpirationMonthsAmount": 1
  },
  "AppInitialization": {
    "SeedDummyData": false
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\log-.txt",
          "outputTemplate": "{Timestamp:G} {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
